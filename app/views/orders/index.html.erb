<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= "Order #: #{order.id}" %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Delete Order', order,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

